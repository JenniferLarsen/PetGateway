@model List<Owner>
@{
    ViewData["Title"] = "View All Data";
}

<div>
    <a asp-asp-controller="Owner" asp-action="Add" class="btn btn-primary">Add New Owner</a>
</div>

<table class="table table-hover">
    <thead>
        <tr>

            <th scope="col">ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Address</th>
            <th scope="col">City</th>
            <th scope="col">State</th>
            <th scope="col">Zip Code</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var owner in Model)
        {
            <tr>
                <td>@owner.OwnerId</td>
                <td>@owner.FirstName</td>
                <td>@owner.LastName</td>
                <td>@owner.Address</td>
                <td>@owner.City</td>
                <td>@owner.State</td>
                <td>@owner.PostalCode</td>
                <td>@owner.PhoneNumber</td>
                <td>@owner.Email</td>

                <td>
                    <div class="btn-group">
                        <a asp-controller="Owner" asp-action="Edit" asp-route-id="@owner.OwnerId" class="btn btn-primary mr-2">Edit</a>
                        <form asp-controller="Owner" asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@owner.OwnerId" />
                            <button class="btn btn-danger ml-5" type="submit">Delete</button>
                        </form>
                        <a asp-controller="Pet" asp-action="Index" asp-route-ownerId="@owner.OwnerId" class="btn btn-info ml-2">View Pets</a>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>
