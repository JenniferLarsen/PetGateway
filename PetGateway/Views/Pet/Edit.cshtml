@model Pet

@{
    ViewData["Title"] = "Edit Pet";
}

<h1>Edit Pet</h1>

<h2> Owner: @ViewBag.OwnerFullName</h2>

<form asp-controller="Pet" asp-action="Edit" method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="PetName">Pet Name</label>
        <input asp-for="PetName" class="form-control" />

    </div>

    <div class="form-group">
        <label asp-for="PetType">Pet Type</label>
        <input asp-for="PetType" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PetColor">Pet Color</label>
        <input asp-for="PetColor" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PetBreed">Pet Breed</label>
        <input asp-for="PetBreed" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PetAge">Pet Age</label>
        <input asp-for="PetAge" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PetGender">Pet Gender</label>
        <select asp-for="PetGender" class="form-control">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="PetWeight">Pet Weight</label>
        <input asp-for="PetWeight" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Spayed_Neutered">Spayed/Neutered</label>
        <select asp-for="Spayed_Neutered" class="form-control">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="OwnerId">Owner ID</label>
        <input asp-for="OwnerId" class="form-control" readonly />
    </div>

    <input type="hidden" asp-for="PetId" />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Pet" asp-action="Index" class="btn btn-primary">Cancel</a>

</form>

