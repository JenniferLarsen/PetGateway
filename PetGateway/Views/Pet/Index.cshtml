@model List<Pet>

@{
    ViewData["Title"] = "View All Pets";
}

<div>
    <a asp-controller="Pet" asp-action="Add" class="btn btn-primary">Add New Pet</a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Type</th>
            <th scope="col">Color</th>
            <th scope="col">Breed</th>
            <th scope="col">Age</th>
            <th scope="col">Gender</th>
            <th scope="col">Weight</th>
            <th scope="col">Spayed/Neutered</th>
            <th scope="col">Owner</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pet in Model)
        {
            <tr>
                <td>@pet.PetId</td>
                <td>@pet.PetName</td>
                <td>@pet.PetType</td>
                <td>@pet.PetColor</td>
                <td>@pet.PetBreed</td>
                <td>@pet.PetAge</td>
                <td>@pet.PetGender</td>
                <td>@pet.PetWeight</td>
                <td>@(pet.Spayed_Neutered ? "Yes" : "No")</td>
                <td>@pet.Owner.FirstName @pet.Owner.LastName</td>
                <td>
                    <div class="btn-group">
                        <a asp-controller="Pet" asp-action="Edit" asp-route-id="@pet.PetId" class="btn btn-primary mr-2">Edit</a>
                        <form asp-controller="Pet" asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@pet.PetId" />
                            <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>